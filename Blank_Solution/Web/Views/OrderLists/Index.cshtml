@model IEnumerable<Web.Models.OrderList>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top: 3%">OrderList</h2>

<table class="table" style="width:70%; margin-top: 5%; margin-left:12%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td style="padding-left:16%;">
            <button class="btn btn-default" onclick="location.href='@Url.Action("Details", new { id = item.ID})'">Details</button>
            <button class="btn btn-default" onclick="location.href='@Url.Action("Delete", new { id = item.ID})'">Delete</button>

        </td>
    </tr>
}

</table>
