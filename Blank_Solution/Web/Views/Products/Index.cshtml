    @model IEnumerable<Web.Models.Products>

@{
    ViewBag.Title = "Products";
}

<h2 style="margin-top: 3%">Products</h2>

<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resolution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ratio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hz)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resolution)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ratio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hz)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Price) 
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Add to Cart", "AddToBasket", new { id = item.ID })
        </td>
    </tr>
}

</table>
